page {
  background-color: transparent;
}
.page {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.page .logo {
  width: 518rpx;
  height: 545rpx;
}
.page .logo image {
  width: 100%;
  height: 100%;
}
.page .loginBtn {
  width: 648rpx;
  height: 130rpx;
  border-radius: 300px;
  background: #f3941e;
  color: white;
  font-family: 思源黑体 CN;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 50rpx;
  letter-spacing: 0px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 173rpx;
}
.page .bg {
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -1;
}
.page .bg image {
  width: 100%;
  height: 100%;
}
.login {
  padding: 80rpx 100rpx 0 100rpx;
}
.other {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 40rpx;
}

